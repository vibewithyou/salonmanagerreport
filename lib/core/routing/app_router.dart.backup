import 'package:flutter/material.dart';
import 'package:go_router/go_router.dart';
import 'package:flutter_riverpod/flutter_riverpod.dart';
import '../../features/auth/presentation/login_screen.dart';
import '../../features/auth/presentation/register_screen.dart';
import '../../features/auth/presentation/forgot_password_screen.dart';
import '../../features/booking/presentation/booking_wizard_screen.dart';
import '../../features/admin/dashboard/admin_dashboard_screen.dart';
import '../../features/employee/dashboard/employee_dashboard_screen.dart';
import '../../features/dashboard/presentation/customer_dashboard_screen.dart';
import '../../features/onboarding/presentation/splash_screen.dart';
import '../../features/onboarding/presentation/entry_screen.dart';
import '../../services/auth_service.dart';
import '../navigation/app_shell.dart';

/// Router configuration provider
final routerProvider = Provider<GoRouter>((ref) {
  final authService = ref.watch(authServiceProvider);
  
  return GoRouter(
    initialLocation: '/splash',
    debugLogDiagnostics: true,
    redirect: (context, state) {
      final isAuthenticated = authService.isAuthenticated;
      final isAuthRoute = state.matchedLocation.startsWith('/auth') ||
          state.matchedLocation == '/splash' ||
          state.matchedLocation == '/booking';

      // Allow splash and booking (guest) routes
      if (state.matchedLocation == '/splash' || state.matchedLocation == '/booking') {
        return null;
      }

      // Redirect to auth if not authenticated and trying to access protected route
      if (!isAuthenticated && !isAuthRoute) {
        return '/auth';
      }

      // Redirect to appropriate dashboard if authenticated and on auth route
      if (isAuthenticated && isAuthRoute) {
        final userRole = authService.currentUser?.role.name;
        switch (userRole) {
          case 'admin':
          case 'manager':
          case 'owner':
            return '/admin';
          case 'stylist':
          case 'employee':
            return '/employee';
          case 'customer':
            return '/customer';
          default:
            return '/auth';
        }
      }

      return null;
    },
    routes: [
      // Splash route
      GoRoute(
        path: '/splash',
        builder: (context, state) => const SplashScreen(),
      ),

      // Auth routes (public)
      GoRoute(
        path: '/auth',
        builder: (context, state) => const EntryScreen(),
      ),
      GoRoute(
        path: '/auth/login',
        builder: (context, state) => const LoginScreen(),
      ),
      GoRoute(
        path: '/auth/register',
        builder: (context, state) => const RegisterScreen(),
      ),
      GoRoute(
        path: '/auth/forgot-password',
        builder: (context, state) => const ForgotPasswordScreen(),
      ),

      // Guest booking route (public)
      GoRoute(
        path: '/booking',
        builder: (context, state) => const BookingWizardScreen(),
      ),

      // Protected routes with shell navigation
      ShellRoute(
        builder: (context, state, child) {
          return AppShell(child: child);
        },
        routes: [
          // Admin routes
          GoRoute(
            path: '/admin',
            builder: (context, state) => const AdminDashboardScreen(),
          ),
          GoRoute(
            path: '/calendar',
            builder: (context, state) => const Placeholder(),
          ),
          GoRoute(
            path: '/schedule',
            builder: (context, state) => const Placeholder(),
          ),
          GoRoute(
            path: '/booking-map',
            builder: (context, state) => const Placeholder(),
          ),
          GoRoute(
            path: '/closures',
            builder: (context, state) => const Placeholder(),
          ),
          GoRoute(
            path: '/employees',
            builder: (context, state) => const Placeholder(),
          ),
          GoRoute(
            path: '/inventory',
            builder: (context, state) => const Placeholder(),
          ),
          GoRoute(
            path: '/suppliers',
            builder: (context, state) => const Placeholder(),
          ),
          GoRoute(
            path: '/service-consumption',
            builder: (context, state) => const Placeholder(),
          ),
          GoRoute(
            path: '/loyalty-settings',
            builder: (context, state) => const Placeholder(),
          ),
          GoRoute(
            path: '/coupons',
            builder: (context, state) => const Placeholder(),
          ),
          GoRoute(
            path: '/reports',
            builder: (context, state) => const Placeholder(),
          ),
          GoRoute(
            path: '/gallery',
            builder: (context, state) => const Placeholder(),
          ),
          GoRoute(
            path: '/conversations',
            builder: (context, state) => const Placeholder(),
          ),
          GoRoute(
            path: '/profile',
            builder: (context, state) => const Placeholder(),
          ),
          GoRoute(
            path: '/settings',
            builder: (context, state) => const Placeholder(),
          ),

          // Employee routes
          GoRoute(
            path: '/employee',
            builder: (context, state) => const EmployeeDashboardScreen(),
          ),

          // Customer routes
          GoRoute(
            path: '/customer',
            builder: (context, state) => const CustomerDashboardScreen(),
          ),
        ],
      ),
    ],
  );
});
